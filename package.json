{
  "name": "nop-chaos",
  "version": "0.1.1",
  "private": true,
  "description": "nop-chaos",
  "type":"module",
  "scripts": {
    "bootstrap": "pnpm install",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "turbo run stub",

    "build": "turbo run build",
    "build:sdk": "turbo build --filter=@nop-chaos/sdk",
    "build:plugin-dingflow": "turbo build --filter=@nop-chaos/plugin-dingflow",
    "build:plugin-amis": "turbo build --filter=@nop-chaos/plugin-amis",
    "dev": "turbo run dev --parallel",
    "nop-dingflow": "turbo run dev --filter=dingflow-playgroud",
    "mydemo": "turbo run dev --filter=mydemo",
    "lint": "turbo run lint",
    "test": "vitest",
    "clean": "turbo run clean && rm -rf node_modules",
    "lint-staged": "pnpm --workspace-concurrency=1 exec lint-staged",
    "new-app": "pnpm exec plop app",
    "new-app-ts": "pnpm exec plop app-ts",
    "new-library": "pnpm exec plop library",
    "new-library-ts": "pnpm exec plop library-ts",
    "docs": "pnpm --filter \"@nop-chaos/docs\" run docs",
    "e2e": "pnpm --filter \"@nop-chaos/e2e\" run e2e",
    "changeset-create": "pnpm exec changeset add",
    "changeset-save-prerelease": "pnpm exec changeset pre enter",
    "changeset-save": "pnpm exec changeset version",
    "changeset-tag": "pnpm exec changeset tag",
    "changeset-tag-and-publish": "pnpm exec changeset publish"
  },
  "keywords": [],
  "dependencies": {

  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.11.13",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-router-dom": "^5.3.3",
    "jsdom": "latest",
    "lint-staged": "^13.1.0",
    "plop": "^3.1.1",
    "prettier": "^2.8.1",
    "vitest": "^0.25.8",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "turbo": "^1.11.3",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vite": "^5.2.0",
    "vite-plugin-mock": "^2.9.6",
    "vue-tsc": "^2.0.6"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --ext .js,.jsx,.ts,.tsx --fix --max-warnings=0",
    "**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql}": "prettier --write"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.12.0",
    "pnpm": ">=8.10.0"
  }
}
